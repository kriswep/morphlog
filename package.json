{
  "name": "morphlog",
  "version": "0.1.0",
  "scripts": {
    "start": "dotenv -- nodemon -e ts,graphql -x ts-node src/index.ts",
    "test": "dotenv -e .env.test jest -- --coverage",
    "test:watch": "dotenv -e .env.test jest -- --watch",
    "dev": "npm-run-all --parallel start playground",
    "debug": "dotenv -- nodemon -e ts,graphql -x ts-node --inspect src/index.ts",
    "playground": "graphql playground",
    "build": "rimraf dist && tsc",
    "integration:startClient": "cd client && PORT=3030 npm run start:noOpen",
    "integration:startServer": "prisma delete -e .env.test -f && prisma deploy -e .env.test && dotenv -e .env.test -- nodemon -e ts,graphql -x ts-node src/index.ts",
    "integration:start": "npm-run-all --parallel integration:startServer integration:startClient",
    "integration:test": "wait-for-server http://localhost:3030 --tries 90 --quiet && wait-for-server http://localhost:4000 --tries 90 --quiet && npm run cypress:run",
    "integration": "npm-run-all --parallel --race integration:start integration:test",
    "cypress:run": "cypress run",
    "cypress:open": "cypress open"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "graphql-yoga": "^1.14.1",
    "jsonwebtoken": "^8.2.1",
    "prisma-binding": "^2.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.1",
    "@types/jest": "^22.2.3",
    "apollo-server-express": "^1.3.6",
    "body-parser": "^1.18.3",
    "cypress": "^2.1.0",
    "dotenv-cli": "^1.4.0",
    "express": "^4.16.3",
    "graphql-cli": "^2.16.0",
    "jest": "^22.4.4",
    "nodemon": "^1.17.4",
    "npm-run-all": "^4.1.3",
    "prisma": "^1.7.1",
    "rimraf": "2.6.2",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.0.3",
    "typescript": "^2.8.3",
    "wait-for-server": "^0.1.1"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "rootDir": "./src",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**",
      "!**/generated/**"
    ],
    "coverageDirectory": "../coverage/",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary"
    ]
  }
}
