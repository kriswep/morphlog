{
  "name": "morphlog",
  "version": "0.1.0",
  "scripts": {
    "start": "dotenv -- nodemon -e ts,graphql -x ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "dev": "npm-run-all --parallel start playground",
    "debug":
      "dotenv -- nodemon -e ts,graphql -x ts-node --inspect src/index.ts",
    "playground": "graphql playground",
    "build": "rimraf dist && tsc"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "graphql-yoga": "^1.3.3",
    "jsonwebtoken": "8.1.1",
    "prisma-binding": "^1.5.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.1",
    "@types/jest": "^22.1.4",
    "dotenv-cli": "1.4.0",
    "graphql-cli": "^2.14.2",
    "jest": "^22.4.2",
    "nodemon": "^1.15.1",
    "npm-run-all": "4.1.2",
    "prisma-cli": "1.0.7",
    "rimraf": "2.6.2",
    "ts-jest": "^22.4.1",
    "ts-node": "4.1.0",
    "typescript": "^2.7.2"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "rootDir": "./src",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": true
      }
    },
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**",
      "!**/generated/**"
    ],
    "coverageDirectory": "../coverage/",
    "coverageReporters": ["json", "lcov", "text", "text-summary"]
  }
}
