{
  "name": "morphlog-server",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "start": "dotenv -- nodemon -e ts,graphql --exec babel-node src/index.js",
    "startProd": "dotenv -e .env.production -- nodemon -e ts,graphql --exec babel-node src/index.js",
    "test": "dotenv -e .env.test jest -- --coverage",
    "test:watch": "dotenv -e .env.test jest -- --watch",
    "format": "prettier --write \"./src/**/*.js\"",
    "lint": "eslint src",
    "dev": "npm-run-all --parallel start playground",
    "devProd": "npm-run-all --parallel startProd playgroundProd",
    "debug": "dotenv -- nodemon -e ts,graphql --exec babel-node --inspect src/index.js",
    "playground": "graphql playground",
    "playgroundProd": "dotenv -e .env.production graphql playground",
    "build": "rimraf dist && tsc"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "graphql-yoga": "^1.16.9",
    "jsonwebtoken": "^8.4.0",
    "prisma-binding": "^2.2.12"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/jest": "^23.3.10",
    "apollo-server-express": "^2.3.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "body-parser": "^1.18.3",
    "dotenv-cli": "^1.4.0",
    "eslint": "^5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^2.6.2",
    "express": "^4.16.4",
    "graphql-cli": "^3.0.3",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "prisma": "^1.23.2",
    "rimraf": "2.6.2",
    "wait-for-server": "^0.1.1"
  },
  "esm": {
    "mode": "all",
    "cjs": {
      "interop": true,
      "namedExports": false
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "import/no-extraneous-dependencies": false,
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "after-used",
          "argsIgnorePattern": "^_",
          "ignoreRestSiblings": true
        }
      ],
      "react/prefer-stateless-function": false
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ]
  },
  "jest": {
    "testURL": "http://localhost"
  },
  "2jest": {
    "rootDir": "./src",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**",
      "!**/generated/**"
    ],
    "coverageDirectory": "../coverage/",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary"
    ]
  }
}
