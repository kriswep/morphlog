{
  "name": "morphlog-server",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "start": "dotenv -- nodemon -r esm -e graphql src/index.js",
    "test": "dotenv -e .env.test node -r esm ./node_modules/.bin/jest . -- --coverage",
    "test:watch": "dotenv -e .env.test jest -- --watch",
    "dev": "npm-run-all --parallel start playground",
    "debug": "dotenv -- nodemon -e graphql --inspect src/index.js",
    "playground": "graphql playground",
    "build": "rimraf dist && tsc"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "esm": "^3.0.48",
    "graphql-yoga": "^1.14.7",
    "jsonwebtoken": "^8.2.2",
    "prisma-binding": "^2.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.49",
    "@babel/core": "^7.0.0-beta.49",
    "@babel/node": "^7.0.0-beta.49",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.49",
    "@babel/preset-env": "^7.0.0-beta.49",
    "@types/bcryptjs": "2.4.1",
    "@types/jest": "^23.0.0",
    "apollo-server-express": "^1.3.6",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.0.1",
    "body-parser": "^1.18.3",
    "dotenv-cli": "^1.4.0",
    "express": "^4.16.3",
    "graphql-cli": "^2.16.2",
    "jest": "^23.1.0",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "prisma": "^1.9.0",
    "rimraf": "2.6.2",
    "wait-for-server": "^0.1.1"
  },
  "esm": {
    "mode": "auto"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest2": {
    "rootDir": "./src",
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/generated/**"
    ],
    "coverageDirectory": "../coverage/",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary"
    ]
  }
}
