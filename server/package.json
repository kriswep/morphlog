{
  "name": "morphlog-server",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "start": "dotenv -- nodemon -e ts,graphql --exec babel-node src/index.js",
    "test": "dotenv -e .env.test jest -- --coverage",
    "test:watch": "dotenv -e .env.test jest -- --watch",
    "format": "prettier --write \"./src/**/*.js\"",
    "lint": "eslint src",
    "dev": "npm-run-all --parallel start playground",
    "debug": "dotenv -- nodemon -e ts,graphql --exec babel-node --inspect src/index.js",
    "playground": "graphql playground",
    "build": "rimraf dist && tsc"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "graphql-yoga": "^1.14.12",
    "jsonwebtoken": "^8.3.0",
    "prisma-binding": "^2.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.49",
    "@babel/core": "^7.0.0-beta.49",
    "@babel/node": "^7.0.0-beta.49",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.49",
    "@babel/preset-env": "^7.0.0-beta.49",
    "@types/bcryptjs": "2.4.1",
    "@types/jest": "^23.3.0",
    "apollo-server-express": "^2.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.4.0",
    "body-parser": "^1.18.3",
    "dotenv-cli": "^1.4.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-prettier": "^2.6.2",
    "express": "^4.16.3",
    "graphql-cli": "^2.16.4",
    "jest": "^23.4.1",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.7",
    "prisma": "^1.12.0",
    "rimraf": "2.6.2",
    "wait-for-server": "^0.1.1"
  },
  "esm": {
    "mode": "all",
    "cjs": {
      "interop": true,
      "namedExports": false
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "import/no-extraneous-dependencies": false,
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "after-used",
          "argsIgnorePattern": "^_",
          "ignoreRestSiblings": true
        }
      ],
      "react/prefer-stateless-function": false
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ]
  },
  "2jest": {
    "rootDir": "./src",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**",
      "!**/generated/**"
    ],
    "coverageDirectory": "../coverage/",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary"
    ]
  }
}
